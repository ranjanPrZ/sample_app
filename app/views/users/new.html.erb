
<h1>Create user</h1>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<%= form_for @user, url: { action: "create" }, html: {class: "nifty_form"} do |f| %>
				<%= f.label :name %>
				<%= f.text_field :name %><br /><br />

				<%= f.label :email %>
				<%= f.email_field :email %><br /><br />

				<%= f.label :phone %>
				<%= f.number_field :phone %><br /><br />

				<%= f.label :password %>
				<%= f.password_field :password %><br /><br />

				<%= f.label :password_confirmation, "Confirmation" %>
				<%= f.password_field :password_confirmation %><br /><br />

				

				<%= f.submit "Create my account", class: 'btn btn-primary' %>
			<% end %>
		</div>
	</div>
</div>
